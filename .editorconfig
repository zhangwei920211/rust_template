# EditorConfig 配置文件
# https://editorconfig.org/

root = true

# 所有文件的默认配置
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Rust 文件
[*.rs]
indent_style = space
indent_size = 4
max_line_length = 100

# TOML 文件
[*.toml]
indent_style = space
indent_size = 4

# YAML 文件
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON 文件
[*.json]
indent_style = space
indent_size = 2

# Markdown 文件
[*.md]
max_line_length = off
trim_trailing_whitespace = false

# Shell 脚本
[*.{sh,bash}]
indent_style = space
indent_size = 2

# PowerShell 脚本
[*.{ps1,psm1}]
indent_style = space
indent_size = 4

# Make 文件
[{Makefile,*.mk}]
indent_style = tab
indent_size = 4
